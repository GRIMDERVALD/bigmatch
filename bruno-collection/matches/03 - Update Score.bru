meta {
  name: Update Match Score
  type: http
  seq: 3
}

put {
  url: {{api_url}}/matches/{{match_id}}
  body: json
  auth: none
}

body:json {
  {
    "score_a": 15,
    "score_b": 12,
    "status": "active"
  }
}

tests {
  test("Score updated", function() {
    expect(res.status).to.equal(200);
    expect(res.body.score_a).to.equal(15);
    expect(res.body.score_b).to.equal(12);
  });
}